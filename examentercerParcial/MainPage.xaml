<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="examentercerParcial.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button Text="Tomar Foto" Clicked="TomarFoto_Clicked" Margin="0,20,0,10" TranslationY="-20"/>

                <!-- Vista previa de la imagen -->
                <Image x:Name="ImagenPreview" HeightRequest="200" Margin="0,10" TranslationY="-20"/>

                <Button x:Name="Grabar" Text="Grabar" Clicked="Grabar_Clicked" Margin="5,5,5,5" HorizontalOptions="FillAndExpand" CornerRadius="20" />
                <Button x:Name="Stop" Text="Stop" Clicked="Stop_Clicked" Margin="5,5,5,5" HorizontalOptions="FillAndExpand" CornerRadius="20"/>
                <DatePicker x:Name="Recuerdo" HorizontalOptions="Fill"
             TextColor="Black" Grid.Row="0" Grid.Column="0" FontAttributes="Bold"/>
                <Entry x:Name="DescripcionEntry" Placeholder="Descripción de la imagen" />
                <Button Text="Crear Imagen" Clicked="GuardarDatosClick" Margin="0,20,0,10" TranslationY="-30"/>

            <Button Text="Ver Tareas" Clicked="VerTareas_Clicked" Margin="0,20,0,10" TranslationY="-40"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
